{
  "name": "hartsoft/genlite",
  "type": "project",
  "license": "MIT",
  "description": "My WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "keywords": [
    "composer",
    "wordpress",
    "wp",
    "wp-config"
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
	  {
		"type": "composer",
		"url": "https://pivvenit.github.io/acf-composer-bridge/composer/v2/wordpress-muplugin/"
	  }
  ],
  "require": {
	"php": ">=7.1",
    "composer/installers": "^1.11",
    "vlucas/phpdotenv": "^5.3",
    "oscarotero/env": "^2.1",
    "advanced-custom-fields/advanced-custom-fields-pro": "^5.9",
    "wpackagist-plugin/duplicate-post": "^4.1",
    "wpackagist-plugin/timber-library": "^1.18",
    "wpackagist-plugin/wordpress-seo": "^16.3",
    "wpackagist-plugin/wordfence": "^7.5",
    "palmiak/timber-acf-wp-blocks": "^1.14",
    "wpackagist-plugin/woocommerce": "^5.4",
    "angry-creative/ldap-login": "^2.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6.0",
    "roave/security-advisories": "dev-master"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "./mu-plugins/{$name}/": ["type:wordpress-plugin","advanced-custom-fields/advanced-custom-fields-pro"]
    }
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
