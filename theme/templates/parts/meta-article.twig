<meta itemprop="headline" content="{{ post.title }}" />
       
{% if post.thumbnail is not empty %} 
    <meta itemprop="image" content="{{ post.thumbnail.src }}" />
{% endif %}

{% set dateTime = date( post.date ) %}

<meta itemprop="datePublished" content="{{ dateTime | date("Y-m-d h:m:s", "Europe/London") }}" />
<meta itemprop="dateModified" content="{{ post.modified_time | date("Y-m-d h:m:s", "Europe/London") }}" />
