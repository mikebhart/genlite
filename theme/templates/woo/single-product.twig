{% extends "base.twig" %}

{% block content %}

    <article>

        <div class="container">
            <div class="row">
                <div class="col-12 margin-bottom-3">

                    {% if post.thumbnail %}
                        <img style="height: 100px; width:100px;" src="{{ post.thumbnail.src }}" />
                    {% endif %}

                    <h1 class="text-center">{{ post.title }}</h1>

                    {{ post.content }}

                </div>
            </div>
        </div>

    </article>


{% endblock %}
