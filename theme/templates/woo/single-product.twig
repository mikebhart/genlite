{% extends 'base.twig' %}

{% block content %}
  
    <article id="product-{{ post.id }}">

        <div class="woo-single product">

            
            <div class="container">
                <div class="row">

                    <div class="col-12">
                        {% do action('woocommerce_before_single_product') %}
                    </div>

                    <div class="col-12 col-md-5">
                        
                        {{ breadcrumb }}
                        
                        <div style="width:80%;">

                            <a href="{{ post.thumbnail.src }}" data-fancybox="single_product">
                                <img style="width:100%; height:100%;" src="{{ post.thumbnail.src('medium') }}"/>
                            </a>
                        </div>

                        {% if post_gallery_images is not empty %}
                        
                            <div class="row">

                                {% for item in post_gallery_images %}

                                    <div class = "col-2">
                                        <a href="{{ item.shop_full_image_url }}" data-fancybox="single_product">
                                            <img src="{{ item.shop_thumbnail_image_url }}" />
                                        </a>
                                    </div>

                                
                                {% endfor %}

                            </div>
                        
                        {% endif %}

                    </div>

                    <div class="col-12 col-md-7">

                        <div class="row">
                    
                            <div class="col-10">
                                {% do action('woocommerce_single_product_summary') %}
                            </div>

                            <div class="col-2 text-right">

                                {% if post.prev is not empty %}
                                    <a href="{{ post.prev.link|esc_url }}">Previous</a>
                                {% endif %}

                                {% if post.next is not empty %}
                                    <a href="{{ post.next.link|esc_url }}">Next</a>
                                {% endif %}
                             
                             </div>

                        </div>
    
                    </div>

                    <div class="col-12">
                        {% do action('woocommerce_after_single_product_summary') %}
                    </div>

                </div>
            </div>

        </div>

    </article>
      
    {# {% do action('woocommerce_after_single_product') %} #}

    {# {% do action('woocommerce_before_single_product') %}
    {% do action('woocommerce_before_single_product_summary') %}
    {% do action('woocommerce_single_product_summary') %}
    {% do action('woocommerce_after_single_product_summary') %}
    {% do action('woocommerce_after_single_product') %} #}

{% endblock %}
