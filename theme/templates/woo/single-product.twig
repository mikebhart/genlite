{% extends 'base.twig' %}

{% block content %}

    <article id="product-{{ post.id }}" class="woo-single">
       
        <div class="container">
            <div class="row">

                <div class="col-12 col-md-5">
                    <img style="width:100%; height:100%;" src="{{ post.thumbnail.src }}"/>
                </div>

                <div class="col-12 col-md-7">
               
                    
                    <h1>{{ post.title }}</h1>
                    <h3>{{ post.meta('_price') }}</h3>

                    {{ post.content }}

  

                    <span>By</span><a href="{{ post.author.path }}"> {{ post.author.name }} </a><span>&bull;</span>
                    <time datetime="{{ post.date|date('Y-m-d H:i:s') }}">{{ post.date }}</time>

                </div>


            </div>
        </div>

    </article>

{% endblock %}
