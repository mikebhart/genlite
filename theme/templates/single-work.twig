{% extends "base.twig" %}

{% block content %}

    <article id="post-{{ post.id }}">

        {% include '/parts/featured-hero.twig' %} 

        <section class="single-work">

            <div class="container">
                
                <div class="row">

                    <div class="col-12">

                        {% if post.project_website is not empty %}
                            
                            <div class="wp-block-button margin-top-3 margin-bottom-3 text-center">
                                <a class="wp-block-button__link" href="{{ post.project_website }}">Visit Website</a>
                            </div>
                        
                        {% endif %}

                    </div>
                
                    <div class="col-12 margin-bottom-3">

                        <div id="work-{{ post.id }}">

                                {{ post.content }}

                        </div>						
                    
                        <p><i>Categories: {{ post.terms( { taxonomy: 'work_category' } ) | join(', ') }}</i></p>

                    </div>

                </div>
                    
            </div>

        </section>
		
    </article>

{% endblock %}
