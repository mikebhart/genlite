{% extends "base.twig" %}

{% block content %}

    <article id="post-{{ post.id }}">

        {% include '/parts/featured-hero.twig' %} 

        <section class="single-work">

            <div class="container">
                
                <div class="row">

                    <div class="col-12 col-md-6 margin-top-3">

                        <div id="work-{{ post.id }}">

                            {{ post.content }}

                        </div>	

                        {% if post.project_website is not empty %}
                            
                            <div class="wp-block-button margin-top-1 margin-bottom-4">
                                <a class="wp-block-button__link" href="{{ post.project_website }}">Visit Website</a>
                            </div>
                        
                        {% endif %}

                    </div>

                    <div class="col-12 col-md-3 offset-md-3 margin-top-3 margin-bottom-3">

                        <h4>Categories</h4>		

                        <div class="margin-bottom-3">

                            {% for term in post.terms( { taxonomy: 'work_category' } )  %}
                                    <p><a href="{{ term.link }}">{{ term.title }}</a></p>
                            {% endfor %}

                        </div>


                        {% if post.prev is not empty %}

                            <div class="wp-block-button">
                                <a class="wp-block-button__link" href="{{ post.prev.link|esc_url }}">Previous</a>
                            </div>

                        {% endif %}

                        {% if post.next is not empty %}

                            <div class="wp-block-button">
                                <a class="wp-block-button__link" href="{{ post.next.link|esc_url }}">Next</a>
                            </div>

                        {% endif %}
                             
                    </div>

                </div>
                    
            </div>

        </section>
		
    </article>

{% endblock %}
