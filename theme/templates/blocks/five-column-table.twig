<section class="block-five-column-table">

    <div class="container">
        <div class="row">
            
            <div class="col-12 text-center margin-bottom-3 animation-section fade-in-up">

                <h2>{{ fields.five_column_table_title }}</h2>
                <hr>

            </div>

            {# Desktop View #}
            <div id="desktop-five-col-table" class="col-12 animation-section fade-in-up">

                <div class="table-responsive">
                    <table class="table">
                    
                        <thead>
                            <tr>
                                <th>{{ fields.five_column_table_title_col_1 }}</th>
                                <th>{{ fields.five_column_table_title_col_2 }}</th>
                                <th>{{ fields.five_column_table_title_col_3 }}</th>
                                <th>{{ fields.five_column_table_title_col_4 }}</th>
                                <th>{{ fields.five_column_table_title_col_5 }}</th>
                            </tr>
                        </thead>
                            
                        <tbody>

                            {% for item in fields.five_column_table %}
                                <tr>
                                    <td><p class="padding-top-2">{{ item.five_column_table_col_1 }}</p></td>
                                    <td><p class="padding-top-2">{{ item.five_column_table_col_2 }}</p></td>
                                    <td><p class="padding-top-2">{{ item.five_column_table_col_3 }}</p></td>
                                    <td><p class="padding-top-2">{{ item.five_column_table_col_4 }}</p></td>
                                    <td><p class="padding-top-2">{{ item.five_column_table_col_5 }}</p></td>
                                </tr>
                            {% endfor %}

                        </tbody>
                    </table>
                </div>

            </div>

            {# Mobile View #}
            <div id="mobile-five-col-table" class="col-12 animation-section fade-in-up">

                <div class="block-five-column-table__mobile-container">



                    {% for item in fields.five_column_table %}

                        <div><div class="block-five-column-table__mobile-heading">{{ fields.five_column_table_title_col_1 }}</div><div class="block-five-column-table__mobile-data"><p>{{ item.five_column_table_col_1 }}</p></div></div>
                        <div><div class="block-five-column-table__mobile-heading">{{ fields.five_column_table_title_col_2 }}</div><div class="block-five-column-table__mobile-data"><p>{{ item.five_column_table_col_2 }}</p></div></div>
                        <div><div class="block-five-column-table__mobile-heading">{{ fields.five_column_table_title_col_3 }}</div><div class="block-five-column-table__mobile-data"><p>{{ item.five_column_table_col_3 }}</p></div></div>
                        <div><div class="block-five-column-table__mobile-heading">{{ fields.five_column_table_title_col_4 }}</div><div class="block-five-column-table__mobile-data"><p>{{ item.five_column_table_col_4 }}</p></div></div>
                        <div><div class="block-five-column-table__mobile-heading">{{ fields.five_column_table_title_col_5 }}</div><div class="block-five-column-table__mobile-data"><p>{{ item.five_column_table_col_5 }}</p></div></div>

                        <div class="text-divider"></div>

                    {% endfor %}

                </div>

            </div>




        </div>

    </div>

</section>
