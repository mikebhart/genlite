{% extends "base.twig" %}

{% block content %}

<article id="post-{{ post.id }}">

	<div class="single-work__wrapper">

        <section class="single-work__image fade-in-zoom" style="background-image: url('{{ post.thumbnail.src }}')">

            <div class="single-work__overlay"></div>

        </section>

        <section class="single-work__text">

            <div class="container">
                <div class="row">
                    <div class="col-12">

                        <div class="title-wrapper">
                            <h1 class="mt-3 text-center">{{ post.title }}</h1>
                        </div>

                    </div>
                </div>
            </div>

        </section>

	</div>

	<div class="container">
		
		<div class="row">

			<div class="col-12 col-md-8 offset-md-2 col-xl-6 offset-xl-3 margin-bottom-3">

                <div id="post-{{ post.id }}">

                    {{ post.content }}

                    <h4 class="mt-2">Categories</h4>

                    <ul>

                        {% for term in post.terms( { taxonomy: 'category' } )  %}
                            <li><a href="{{ term.link }}">{{ term.title }}</a></li>
                        {% endfor %}

                    </ul>

                    <div class="pagination margin-top-3">

                        <div class="col-6">

                            <div class="text-left">
                                {% if post.prev %}
                            
                                    <a href="{{ post.prev.link }}">Previous article</a>

                                {% endif %}

                            </div>
                        
                        </div>

                        <div class="col-6">

                            <div class="text-right">

                                {% if post.next %}

                                    <a href="{{ post.next.link }}">Next article</a>

                                {% endif %}

                            </div>

                        </div>

                    </div>


                </div>						
			
			</div>

		</div>
			
	</div>
		
</article>

{% endblock %}

