<!doctype html>
<html lang="en">

<head>

    {% if script_code.code_head is not empty %}

        {{ script_code.code_head }}

    {% endif %}

    <link rel='preload' href='{{ theme.link }}/dist/fonts/karla-v30-latin-regular.woff2' as='font' type='font/woff2' crossorigin>
    <link rel='preload' href='{{ theme.link }}/dist/fonts/rubik-v26-latin-regular.woff2' as='font' type='font/woff2' crossorigin>

    {% set description = site.title %}
    {% set image_thumbnail_url = theme.link ~ '/dist/images/hs-socials-preview.png' %}

    {% if post.genlite_seo_description is not empty %}
        {% set description = post.genlite_seo_description %}
    {% endif %} 

    {% if post.thumbnail is not empty %}
         {% set image_thumbnail_url = post.thumbnail.src %}
    {% endif %}

    <meta charset="{{ site.charset }}" />
    <meta name="description" content="{{ description }}">

    <!-- Google / Search Engine Tags -->
    <meta itemprop="name" content="{{ post.title }}">
    <meta itemprop="description" content="{{ description }}">
    <meta itemprop="image" content="{{ image_thumbnail_url }}">

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="{{ post.link }}">
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{ post.title }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:image" content="{{ image_thumbnail_url }}">

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ post.title }}">
    <meta name="twitter:description" content="{{ description }}">
    <meta name="twitter:image" content="{{ image_thumbnail_url }}">

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="pingback" href="{{ site.pingback_url }}" />
    <link rel="profile" href="http://gmpg.org/xfn/11">

    {{ function('wp_head') }}
