{% extends "base.twig" %}

{% block content %}

    <article id="post-{{ post.id }}" class="single-page" itemscope itemtype="https://schema.org/NewsArticle">

        {% include 'parts/meta-article.twig' %} 

        {% if post.genlite_page_heading_settings.value == 'featured-hero'  %}
            
            {% include 'parts/featured-hero.twig' %} 

        {% else %}

            {% include 'parts/post-title.twig' %}

       {% endif %}

       {% include 'parts/post-content.twig' %} 

    </article>


{% endblock %}
