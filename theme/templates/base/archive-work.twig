{% extends "base.twig" %}

{% block content %}

    <article>

        <section class="archive-work__header">
        
            <div class="container">
                <div class="row">

                    <div class="col-12 text-center">

                        <div class="title-wrapper">
                            <h1>{{ work_archive.title }}</h1>
                            {{ work_archive.description }}
                        </div>

                    </div>
                </div>
            </div>

        </section>

        <section>

            {% for work in posts %}

                {% if work.post_status == 'publish' %}

                    <div class="archive-work-card__layout fade-in-up">
                        <article class="archive-work-card" style="background-image: url( {{ work.thumbnail.src }} );">
                            <div class="archive-work-card__overlay">
                                <div class="archive-work-card__overlay-content">
                                    
                                    <h3 class="archive-work-title">{{ work.title }}</h3>
                                    <p class="text-white">{{ work.terms( { taxonomy: 'work_category' } ) | join(', ') }}</p>

                                    <div class="margin-top-1">
                                        <a href="{{ work.link }}" aria-label="{{ work.title }}">VIEW PROJECT<img class="button-arrow" src="{{ theme.link }}/dist/images/arrow-right-solid.svg" alt="arrow right image"></a>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>

                {% endif %}


            {% endfor %}

            <div class="clearfix"></div>

        </section>

    </article>

{% endblock %}
