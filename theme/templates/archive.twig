{% extends "base.twig" %}

{% block content %}

    <section class="archive">
        <div class="container">
            <div class="row">

                <div class="col-12 col-xl-6 text-left margin-top-2">
                    
                    <h1>{{ title }}</h1>
                    {{ description }}

                </div>

            </div>

            <div class="row">

                <div class="col-12 col-xl-4 text-left margin-top-2">

                     <div id="ps-custom-select" class="ps-select">

                        <select id="literature-key-info-select">

                            <option value="All Categories">All Categories</option>

                            {% for category_item in category_data %}
                                <option value="{{ category_item.category.category_link }}">{{ category_item.category.name }}</option>
                            {% endfor %}
                        
                        </select>

                    </div>


                    
                </div>

            </div>
        </div>
    </section>

    <section class="archive">

        <div class="container">
            <div class="row">
                <div class="col-12">

            </div>

            </div>

            <div class="row">
    
                {% for post in posts %}

                    {% if post.post_status == 'publish' and post.title is not empty %}

                        <div class="col-12 col-sm-6 col-md-4 mb-4">

                            <article>

                                <a href="{{ post.link }}" aria-label="{{ post.title }}">{{ post.title }}</a>

                            </article>

                        </div>

                    {% endif %}

                {% endfor %}

            </div>
        </div>

    </section>

{% endblock %}
